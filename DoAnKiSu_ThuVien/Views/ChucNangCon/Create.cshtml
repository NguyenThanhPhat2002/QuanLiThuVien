@model DoAnKiSu_ThuVien.Models.TaiLieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_System.cshtml";
    DoAnKiSu_ThuVien.Models.QuanLyThuVienEntities db = new DoAnKiSu_ThuVien.Models.QuanLyThuVienEntities();
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>TaiLieu</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TenTaiLieu, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenTaiLieu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTaiLieu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KyHieuPhanLoai, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.KyHieuPhanLoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KyHieuPhanLoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LoaiTaiLieu, "LoaiTaiLieu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("LoaiTaiLieu", null, htmlAttributes: new { @class = "form-control" })*@
            <select class="form-control" name="LoaiTaiLieu">
                @foreach (var loaitl in db.LoaiTaiLieux.ToList())
                {
                    <option value="@loaitl.ID_Loai">@loaitl.TenLoai</option>
                }


            </select>

            @Html.ValidationMessageFor(model => model.LoaiTaiLieu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ChuDe, "ChuDe", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("ChuDe", null, htmlAttributes: new { @class = "form-control" })*@
            <select class="form-control" name="ChuDe">
                @foreach (var chude in db.ChuDes.ToList())
                {
                    <option value="@chude.ID_ChuDe">@chude.TenChuDe</option>
                }


            </select>
            @Html.ValidationMessageFor(model => model.ChuDe, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TacGias, "TacGia", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("ChuDe", null, htmlAttributes: new { @class = "form-control" })*@
            <select class="form-control" name="TacGia">
                @foreach (var tacgia in db.TacGias.ToList())
                {
                    <option value="@tacgia.ID_TG">@tacgia.TenTG</option>
                }


            </select>
            @Html.ValidationMessageFor(model => model.TacGias, "", new { @class = "text-danger" })
        </div>
    </div>
  

    <div class="form-group">
        @Html.LabelFor(model => model.NgayNhap, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NgayNhap, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker" })
            @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>


</div>
}

