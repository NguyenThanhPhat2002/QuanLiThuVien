<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .sidebar {
        width: 220px;
        color: #c8c8c8;
        font-size: 17px;
        height: 100vh;
        background-color: #24344b;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .main-menu {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .main-menu > li {
            padding: 10px;
            cursor: pointer;
            position: relative;
        }

            .main-menu > li:hover {
                background-color: #404f64;
                color: #fff;
            }

    .sidebar .main-menu #title-menu {
        border-bottom: 1px ridge #ddd;
        text-align: center;
    }

    .sub-menu {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: none;
        position: absolute;
        top: 0;
        z-index: 19;
        left: 100%;
        width: 150px;
        background-color: #f4f4f4;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

        .sub-menu li {
            padding: 10px;
            display: flex;
            align-items: center;
            background-color: #404f64;
            width: 200px;
        }
       
            .sub-menu li a:hover {
                color: #0dd469;
            }

    .main-menu > li:hover .sub-menu {
        display: block;
    }

    .sub-menu li a {
        text-decoration: none;
        color: #fff;
        display: block;
        width: 100%;
        height: 100%;
    }
    .main-content{
        flex-grow: 1;
        height: auto;
        overflow: auto;
    }
</style>

<div class="d-flex justify-content-around ">
    <div class="sidebar">
        <ul class="main-menu">
            <li id="title-menu">
                <div class="d-flex justify-content-around align-items-center">
                    <img style="width: 34px; height: 34px" src="~/Content/images/icons/ic_Library_Menu.svg" />
                    <span style="width: fit-content">Thư viện</span>
                </div>
            </li>
        </ul>
    </div>
    <div class="main-content">
        @RenderBody()
    </div>
   
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
    fetch('/System/GetListFunction', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        data.forEach(item => {
            var row = document.createElement('li');
            row.textContent = item.ten;
            var ul = document.createElement('ul');
            ul.classList.add("sub-menu")
            item.chucNang.forEach(sub => {
                var subitem = document.createElement('li');
                var view = convertString(sub); // Sử dụng arrow function giữ nguyên ngữ cảnh của this
                subitem.innerHTML = `<a href="/ChucNangCon/${view}">${sub}</a>`;
                ul.appendChild(subitem);
            })
            row.appendChild(ul)
            var tbody = document.querySelector('.main-menu');
            tbody.appendChild(row);
        })
    })
            .catch(error => console.error('Error:', error));

      
});

function removeDiacritics(str) {
    return str.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
}

    function toPascalCase(str) {
   
    return str
        .toLowerCase()
        .split(' ')
        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
        .join('');
}

    function convertString(str) {
        if (str == "Quản lý độc giả")
            return "QuanLyDocGia";
    const noDiacritics = removeDiacritics(str);
    return toPascalCase(noDiacritics);
}

</script>



