            transition-delay: 0.1s;
            opacity: 0;
        }

        .header-account:hover .drop-account,
        .header-account:focus-within .drop-account {
            display: block;
            opacity: 1;
        }

        .drop-account ul {
            list-style-type: none;
            padding: 0;
            text-align: left;
        }

            .drop-account ul li {
                margin-left: 15px;
