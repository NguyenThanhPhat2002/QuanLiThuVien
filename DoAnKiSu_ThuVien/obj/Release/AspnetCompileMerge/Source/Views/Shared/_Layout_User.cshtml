            }

        .navbar-default .navbar-nav > li > a {
            padding: 15px 15px;
            outline: none;
            color: black;
            font-weight: bold;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .navbar-nav > li > .dropdown-menu {
          
            position: absolute;
            display: none;
            left: 14px;
            top: 50px;
        }
        .dropdown-menu ul {
            z-index: 3;
            border-bottom: 1px solid #e6e6e6;
            line-height: 25px;
            padding-top: 0;
        }
        .dropdown-menu ul li{
