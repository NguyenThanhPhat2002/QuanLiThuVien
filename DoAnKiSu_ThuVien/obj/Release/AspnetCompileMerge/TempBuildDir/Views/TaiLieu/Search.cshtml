
@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Search</title>
</head>
<body>
    <div class="container" style="margin-top: 20px;">
        @model List<DoAnKiSu_ThuVien.Models.ThongTinTaiLieuTimKiem>

        @if (Model.Count == 0)
        {
            <p>Không tìm thấy tài liệu</p>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Tác giả chính</th>
                        <th scope="col">Năm xuất bản</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>
                                <a href="@Url.Action("Detail", "TaiLieu", new { id = item.id })" class="ten-tai-lieu" data-id="@item.id">
                                    <span>@item.tenTL</span>
                                </a>
                            </td>

                            <td>@item.tacGia</td>
                            <td>@item.namXuatBan</td>
                        </tr>
                    }
                </tbody>
            </table>
        }


    </div>
</body>
</html>


